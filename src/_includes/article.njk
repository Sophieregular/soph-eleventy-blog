---
layout: 'base.njk'
---

 <article class="container justify-content-center text-center py-5 border-bottom border-secondary">    
    <div class="py-3 container border-bottom border-secondary">
        <img class="img-fluid col justify-content-center" src="{{ image }}" alt="{{ imageAlt }}">
                 <h1 class= pt-3>{{ title }}</h1>
                    <p><small class="text-muted">{{ author }}</small></p>
                <p>{{ date }}</p>
        </div>            
                <main class="py-5">
                        {{ content | safe }}
                 </main>
         <div class="pt-5">
                <a class="btn btn-outline-primary " href="/blog" role="button">Back to all posts</a>
        </div>
</article>